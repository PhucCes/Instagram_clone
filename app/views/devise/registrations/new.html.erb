<div class="center">

    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :user_name, placeholder: "User Name*", class: 'form-control' %><br>
          <%= f.email_field :email, placeholder: "Email*", class: 'form-control' %><br>
          <%= f.password_field :password, placeholder: "Password*", class: 'form-control' %><br>
          <%= f.password_field :password_confirmation, placeholder: "Password Confirmation*", class: 'form-control' %>
        </div>

        <div><%= f.submit "Sign up", class: "btn btn-large btn-primary" %></div>
    <% end %>

    Already a user? <%= render "devise/shared/links" %>
</div>
