<div class="center">

  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs form-group">
      <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email*", class: 'form-control' %><br>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-large btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
